@model DBApp.Models.SignupDto

<!DOCTYPE html>
<html>
<head>
    <title>Sign Up</title>
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h2>Sign Up</h2>
            
            @if(ViewBag.Error != null)
            {
                <div class="error">@ViewBag.Error</div>
            }
            
            <form asp-action="Signup" method="post">
                <div class="form-group">
                    <label asp-for="Name">Name:</label>
                    <input asp-for="Name" type="text" required />
                    <span asp-validation-for="Name" class="error"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Email">Email:</label>
                    <input asp-for="Email" type="email" required />
                    <span asp-validation-for="Email" class="error"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Password">Password:</label>
                    <input asp-for="Password" type="password" required />
                    <span asp-validation-for="Password" class="error"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Role">Role:</label>
                    <select asp-for="Role" required>
                        <option value="">Select Role</option>
                        <option value="Admin">Admin</option>
                        <option value="Receptionist">Receptionist</option>
                    </select>
                    <span asp-validation-for="Role" class="error"></span>
                </div>
                
                <button type="submit" class="btn">Sign Up</button>
            </form>
            
            <p><a href="@Url.Action("Login", "Auth")">Already have an account? Login</a></p>
        </div>
    </div>
</body>
</html>
